@model jobApplicationTracking.Models.CompaniesDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card border-danger shadow">
                <div class="card-body">
                    <h2 class="card-title text-danger mb-4">Are you sure you want to delete this Company?</h2>
                    <h3>Name: @Model.CompanyName</h3>
                    <p class="text-muted">This action cannot be undone.</p>
                    <form action="/companies/Delete/@Model.CompanyID" method="POST">
                        <div class="d-grid gap-2 d-md-block">
                            <input type="submit" value="Confirm Delete" class="btn btn-danger btn-lg" />
                            <a href="/companies/List" class="btn btn-secondary btn-lg mt-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


