@model IEnumerable<jobApplicationTracking.Models.UserDto>
@{
    ViewBag.Title = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="card-title mb-4">Create User</h2>
                    <form action="/User/Create" method="POST">
                        <div class="mb-3">
                            <label for="userName" class="form-label">Name:</label>
                            <input type="text" class="form-control" id="userName" name="UserName">
                        </div>
                        <div class="mb-3">
                            <label for="userEmail" class="form-label">Email:</label>
                            <input type="text" class="form-control" id="userEmail" name="UserEmail">
                        </div>
                        <div class="mb-3">
                            <label for="userPortfolioUrl" class="form-label">Portfolio Url:</label>
                            <input type="text" class="form-control" id="userPortfolioUrl" name="UserPortfolioUrl">
                        </div>
                        <button type="submit" class="btn btn-primary">Create User</button>
                        <a href="/User/List" class="btn btn-secondary mt-3">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


